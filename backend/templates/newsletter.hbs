<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <title>{{issue}} | {{month}}</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      background: #f4f6f9;
      margin: 0;
      padding: 0;
    }
    .container {
      max-width: 800px;
      margin: auto;
      background: #ffffff;
    }
    .header {
      background: #003366;
      color: #fff;
      text-align: center;
      padding: 30px 10px;
    }
    .header h1 {
      margin: 0;
      font-size: 26px;
    }
    .header p {
      margin: 5px 0 0;
      font-size: 14px;
    }
    .section-grid {
      display: grid;
      grid-template-columns: repeat(3, 1fr);
      gap: 15px;
      padding: 20px;
    }
    .card {
      border-radius: 10px;
      padding: 15px;
      color: #fff;
      text-align: center;
    }
    .card img {
      width: 100%;
      border-radius: 8px;
    }
    .card h3 {
      margin: 10px 0;
    }
    .details {
      padding: 20px;
    }
    .details h2 {
      border-bottom: 2px solid #003366;
      padding-bottom: 5px;
      color: #003366;
    }
    .details img {
      width: 100%;
      margin: 10px 0;
      border-radius: 8px;
    }
    .footer {
      background: #f0f0f0;
      text-align: center;
      padding: 20px;
      font-size: 12px;
      color: #333;
    }
  </style>
</head>
<body>

<div class="container">

  <!-- HEADER -->
  <div class="header">
    <h1>University Newsletter</h1>
    <p>Issue {{issue}} | {{month}}</p>
  </div>

  <!-- CARD SECTIONS -->
  <div class="section-grid">
    {{#each sections}}
    <div class="card" style="background:#2c3e50">
      {{#if image}}
      <img src="{{image}}" alt="">
      {{/if}}
      <h3>{{category}}</h3>
      <p>{{title}}</p>
    </div>
    {{/each}}
  </div>

  <!-- DETAILED CONTENT -->
  <div class="details">
    {{#each sections}}
      <h2>{{category}}</h2>
      <h3>{{title}}</h3>
      {{#if image}}
        <img src="{{image}}">
      {{/if}}
      <p>{{description}}</p>
      {{#if link}}
        <p><a href="{{link}}">Read more</a></p>
      {{/if}}
    {{/each}}
  </div>

  <!-- FOOTER -->
  <div class="footer">
    <p>Brainware University, Barasat, Kolkata â€“ 700125</p>
    <p>Website: www.brainwareuniversity.ac.in | Email: info@brainwareuniversity.ac.in</p>
  </div>

</div>

</body>
</html>
